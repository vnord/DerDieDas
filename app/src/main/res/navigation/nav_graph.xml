<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/StartFragment">

    <fragment
        android:id="@+id/StartFragment"
        android:name="com.github.vnord.derdiedas.view.StartFragment"
        tools:layout="@layout/fragment_start">

        <action
            android:id="@+id/action_StartFragment_to_QuizFragment"
            app:destination="@id/QuizFragment" />
        <action
            android:id="@+id/action_StartFragment_to_nounPhraseListFragment"
            app:destination="@id/nounPhraseListFragment" />
    </fragment>
    <fragment
        android:id="@+id/QuizFragment"
        android:name="com.github.vnord.derdiedas.view.QuizFragment"
        tools:layout="@layout/fragment_quiz">

        <action
            android:id="@+id/action_QuizFragment_self"
            app:destination="@id/QuizFragment" />
        <action
            android:id="@+id/action_QuizFragment_to_doneFragment"
            app:destination="@id/doneFragment" />
        <action
            android:id="@+id/action_QuizFragment_to_StartFragment"
            app:destination="@id/StartFragment" />
    </fragment>
    <fragment
        android:id="@+id/NewEntryFragment"
        android:name="com.github.vnord.derdiedas.view.NewEntryFragment"
        tools:layout="@layout/fragment_new_entry" >
        <action
            android:id="@+id/action_NewEntryFragment_to_nounPhraseListFragment"
            app:destination="@id/nounPhraseListFragment" />
    </fragment>
    <fragment
        android:id="@+id/nounPhraseListFragment"
        android:name="com.github.vnord.derdiedas.view.NounPhraseListFragment"
        android:label="fragment_noun_phrase_list"
        tools:layout="@layout/fragment_noun_phrase_list" >
        <action
            android:id="@+id/action_nounPhraseListFragment_to_NewEntryFragment"
            app:destination="@id/NewEntryFragment" />
        <action
            android:id="@+id/action_nounPhraseListFragment_to_StartFragment"
            app:destination="@id/StartFragment" />
    </fragment>
    <fragment
        android:id="@+id/doneFragment"
        android:name="com.github.vnord.derdiedas.DoneFragment"
        android:label="fragment_done"
        tools:layout="@layout/fragment_done" >
        <action
            android:id="@+id/action_doneFragment_to_StartFragment"
            app:destination="@id/StartFragment" />
    </fragment>
</navigation>